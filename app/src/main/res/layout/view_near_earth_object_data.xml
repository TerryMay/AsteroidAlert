<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Name"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt_close_approach_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Name"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt_miss_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Misses us by a distance of %1$s KM"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_close_approach_date"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt_max_diameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="40.5172516478 Meters max diameter"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_miss_distance"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt_is_dangerous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="is not a potentially hazardous asteroid"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/txt_max_diameter"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>